<% @user ||= current_user %>
<div class="stats">
  <a href="<%= followings_user_path(@user) %>">
    <strong>
      <%= @user.followings.count %>
    </strong>
    <%= User.human_attribute_name(:following) %>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong>
      <%= @user.followers.count %>
    </strong>
    <%= User.human_attribute_name(:follower) %>
  </a>
</div>
