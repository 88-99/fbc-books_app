<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('labels.Title') %></th>
      <th><%= I18n.t('labels.Memo') %></th>
      <th><%= I18n.t('labels.Author') %></th>
      <th><%= I18n.t('labels.Picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to I18n.t('links.Show'), book %></td>
        <td><%= link_to I18n.t('links.Edit'), edit_book_path(book) %></td>
        <td><%= link_to I18n.t('links.Destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

